# generated by makefile_builder.pl using [path cur_dir -t install msg php sh dir xml]

# search file from current folder to parent folders
# cutoff at 14th parent folder
search_cutoff := ../../../../../../../../../../../../../../
define search-file
	$(if $(filter $(search_cutoff)%,$1),,$(if $(wildcard $1),$1,$(call search-file,../$1)))
endef

include $(call search-file,path.mk)
include $(call search-file,lib.mk)
include $(TOPDIR)/.config
include $(TOPDIR)/Vars.mk

current_dir := $(shell pwd)
targets :=

############################# section all #############################
targets += all
# file and directory selectors

all:

############################# section clean #############################
targets += clean
# file and directory selectors

clean:

############################# section install #############################
targets += install
# file and directory selectors
install_php_files := $(wildcard *.php)
install_xml_files := $(wildcard *.xml)
install_sh_files := $(wildcard *.sh)
install_directories := $(subst /,,$(shell ls -d */ 2> /dev/null))

# function: replace_sign_and_install
# $1: source path
# $2: destination path
# $3: filenames
# usage: $(call replace_sign_and_install,path_a,path_b,file_1 file_2 ...)
define replace_sign_and_install
	@for file in $3; do \
		sed -e 's|SiGnAtUrE|$(ELBOX_CONFIG_SIGNATURE)|' $1/$$file > $2/$$file; \
	done
endef

install:
	$(call color_print,Install objects in $(current_dir),green)
	$(call replace_sign_and_install,.,$(TARGET)/etc/defnodes,$(install_xml_files))
	$(call install_files,.,$(TARGET)/etc/defnodes,$(install_php_files))
	$(call install_scripts,.,$(TARGET)/etc/defnodes,$(install_script_files))

############################# section rootfs #############################
targets += rootfs
# file and directory selectors

rootfs:
	$(call color_print,Constructing rootfs folders in $(current_dir) ...,green)
	$(call create_install_paths,$(TARGET)/etc/defnodes)

.PHONY: $(targets)
